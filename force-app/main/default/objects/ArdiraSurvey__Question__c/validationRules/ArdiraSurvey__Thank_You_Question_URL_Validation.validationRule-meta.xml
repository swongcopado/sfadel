<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ArdiraSurvey__Thank_You_Question_URL_Validation</fullName>
    <active>true</active>
    <description>Validation for checking URL format.</description>
    <errorConditionFormula>IF( OR( ISBLANK( ArdiraSurvey__Thank_You_Button_Link_URL_Long__c ) , REGEX(ArdiraSurvey__Thank_You_Button_Link_URL_Long__c , &quot;^((ftp|http|https)://)[^ \&quot;]+$&quot; ) ) , false, true)</errorConditionFormula>
    <errorDisplayField>ArdiraSurvey__Thank_You_Button_Link_URL_Long__c</errorDisplayField>
    <errorMessage>URL is not of correct format. It has to start with http:// or https://</errorMessage>
</ValidationRule>
